{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["standard", "standard-react"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/jsx-no-bind": ["error", {
        "allowArrowFunctions": true,
        "allowBind": true,
        "ignoreRefs": true
      }],
      "eslint react/prop-types": 0,
      "react/prop-types":1,
      "no-useless-escape":0,
      "no-unused-vars":1
  }
}
